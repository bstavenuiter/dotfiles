# send window to desktop and follow focus
shift + alt - 1 : yabai -m window --space 1 && yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2 && yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3 && yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4 && yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5 && yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6 && yabai -m space --focus 6

# Changed split percentage of the current window
cmd + alt - right : yabai -m window --ratio rel:0.2
cmd + alt - left : yabai -m window --ratio rel:-0.2

# Move window to other screen
ctrl + cmd + alt - left : yabai -m window --focus west || yabai -m display --focus west
ctrl + cmd + alt - right : yabai -m window --focus east || yabai -m display --focus east
ctrl + cmd + alt - up : yabai -m window --focus north || yabai -m display --focus north
ctrl + cmd + alt - down : yabai -m window --focus south || yabai -m display --focus south
